<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackmask"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:paddingBottom="5dp">

    <SeekBar
        android:id="@+id/mediacontroller_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        android:progressDrawable="@drawable/seekbar_video"
        style="@android:style/Widget.ProgressBar.Horizontal"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 左下角按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pause"
                android:src="@mipmap/icon_video_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="btnPause" />

            <TextView
                android:id="@+id/time_current"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="00:00:00" />

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="00:00:00" />
        </LinearLayout>

        <!-- 右下角按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_chat_comment"
                android:background="@android:color/transparent"
                android:contentDescription="btnComment" />

            <ImageButton
                android:id="@+id/live_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_chat_livecomt_on"
                android:background="@android:color/transparent"
                android:contentDescription="subtitle" />

            <ImageButton
                android:id="@+id/fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_video_zoom_out"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:contentDescription="fullscreen" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
