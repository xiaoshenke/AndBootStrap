<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackmask"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:paddingBottom="5dp"
    android:layout_gravity="bottom">

    <SeekBar
        android:id="@+id/mediacontroller_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        android:progressDrawable="@drawable/seekbar_video"
        style="@android:style/Widget.ProgressBar.Horizontal"

        />
    <!-- android:thumb="@drawable/icon_thumb" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/pause"
            android:src="@mipmap/icon_video_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@android:style/MediaButton.Play"
            android:contentDescription="stop" />

        <ImageButton
            android:id="@+id/fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_video_zoom_in"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="fullscreen" />


        <LinearLayout
            android:layout_toRightOf="@id/pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="4dip"
            android:paddingBottom="8dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_current"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="00:00:00" />

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="00:00:00" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>